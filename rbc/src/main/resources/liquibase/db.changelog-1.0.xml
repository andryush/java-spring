<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="1.0.0" author="andrey.arakelyan">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false" />
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.1" author="andrey.arakelyan">
        <createTable tableName="roles">

            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false" />
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false" />
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.0.2" author="andrey.arakelyan">
        <createTable tableName="user_roles">

            <column name="user_id" type="BIGINT">
            </column>

            <column name="role_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.3" author="andrey.arakelyan">
        <createTable tableName="customers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone_number" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="1.0.4" author="andrey.arakelyan">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_roles_users"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"/>
    </changeSet>

    <changeSet id="1.0.5" author="andrey.arakelyan">
        <addForeignKeyConstraint baseTableName="user_roles"
                                 baseColumnNames="role_id"
                                 constraintName="fk_user_roles_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT" />
    </changeSet>
    
    <changeSet id="1.0.6" author="andrey.arakelyan">
        <insert tableName="roles">
            <column name="name" value="ROLE_USER">
            </column>
        </insert>

        <insert tableName="roles">
            <column name="name" value="ROLE_ADMIN">
            </column>
        </insert>
    </changeSet>


</databaseChangeLog>